<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.platform.dao.SignInMapper">
    <resultMap id="BaseResultMap" type="com.platform.pojo.SignIn">
        <constructor>
            <arg column="id" jdbcType="INTEGER" javaType="java.lang.Integer"/>
            <arg column="user_id" jdbcType="INTEGER" javaType="java.lang.Integer"/>
            <arg column="time" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
            <arg column="days" jdbcType="INTEGER" javaType="java.lang.Integer"/>
        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
    id,user_id,time,days
  </sql>
    <insert id="insert" parameterType="com.platform.pojo.SignIn">
    insert into s_p_sign_in (id, user_id, time, 
      days)
    values (#{id,jdbcType=INTEGER}, #{userId,jdbcType=INTEGER}, #{time,jdbcType=TIMESTAMP}, 
      #{days,jdbcType=INTEGER})
  </insert>
    <insert id="insertSelective" parameterType="com.platform.pojo.SignIn">
        insert into s_p_sign_in
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
            <if test="time != null">
                time,
            </if>
            <if test="days != null">
                days,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="userId != null">
                #{userId,jdbcType=INTEGER},
            </if>
            <if test="time != null">
                #{time,jdbcType=TIMESTAMP},
            </if>
            <if test="days != null">
                #{days,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <update id="updateSignIn">
        update s_p_sign_in
        set days =
        case
        when to_days(time) = to_days(now()) then days
        when to_days(now()) - to_days(time) <![CDATA[<= ]]> 1 then days mod 7 + 1
        else 1
        end,
        time =
        case
        when to_days(time) = to_days(now()) then time
        else now()
        end
        where user_id = #{userId};
    </update>
    <select id="selectByUserId" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from s_p_sign_in
        where user_id = #{userId}
    </select>
    <select id="selectDaysByUserId" resultType="java.lang.Integer">
      select
      case
      when to_days(time) >= to_days(now()) -1 then days
      else 0
      end as days
      from s_p_sign_in
      where user_id = #{userId};
  </select>
</mapper>